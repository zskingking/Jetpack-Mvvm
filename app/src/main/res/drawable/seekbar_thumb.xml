<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="@color/white"/>
            <size
                android:width="12dp"
                android:height="12dp"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="@color/white"/>
            <size
                android:width="12dp"
                android:height="12dp"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="?attr/colorAccent"/>
            <size
                android:width="12dp"
                android:height="12dp"/>
        </shape>
    </item>
</selector>